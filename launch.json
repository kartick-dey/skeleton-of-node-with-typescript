{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
            "skipFiles": ["<node_modules>/***"],
            "program": "${workspaceFolder}//src//server.ts", // src/server.ts
            "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
            "console": "integratedTerminal",
            "outFiles": ["${workspaceFolder}/**/*.(m|c|)js", "!**/node_modules/**"]
        }
    ]
}
